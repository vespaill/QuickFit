extends layout

block content
  .container.main-content
    .row.mb-4
      .col-12
        .display-4.text-center Add a new exercise to the database
    form(action='', method='post', role='form')
      //- Exercise name and muscle group ROW
      .row.mb-4
        .col-sm-6.input-group.mb-3
          .input-group-prepend
            span.input-group-text#inputGroup-sizing-default Name:
          input.form-control(type='text' aria-label='Sizing example input' describedby='inputGroup-sizing-default' placeholder='. . .' name='name')

        .col-sm-6.input-group.mb-3
          .input-group-prepend
            span.input-group-text#inputGroup-sizing-default Category:
          select.custom-select.form-control(type='text' aria-label='Sizing example input' describedby='inputGroup-sizing-default' name='category')
            option(hidden) Choose a category
            each option in groupOptions
              option= option

      //- Equipment options ROW
      .row.mb-5
        .col-12
          label.col-12.input-label Equipment Options:
          .card.input-card.overflow-hidden
            .row
              each option in equipOptions
                .col-sm-2.text-center
                  input.form-check-input(type='checkbox', id=`checkbox-${option.abbrv}` name='equipment', value=option.abbrv)
                  label.form-check-label(for=`checkbox-${option.abbrv}`)
                    span.badge.badge-warning(data-toggle='tooltip' data-placement='right' data-html="true" title=option.name)= option.abbrv

      //- Description text area ROW
      .row.mb-4
        .col-12
          label.col-12.input-label Description:
          textarea.desc-txt.form-control.input-card(placeholder='. . .' name='description')

      //- Submit
      .row.justify-content-center
        button.col-sm-3.btn.btn-default Save

block scripts
  script(src='/javascripts/exercise-form.js')